@model Infoblog.Models.IndexViewModel
@{
    ViewBag.Title = "Hantera konto";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Ändra dina kontoinställningar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Lösenord:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Byt lösenord", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Skapa lösenord", "SetPassword")
            }
            ]
        </dd>
        <dt>Notisinställningar</dt>
        <dd>@Html.ActionLink("Ändra notisinställningar", "NotificationSettings")</dd>
    </dl>
</div>
