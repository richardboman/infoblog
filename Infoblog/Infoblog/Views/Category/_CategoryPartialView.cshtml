@model List<Infoblog.Models.CategoryModel>

@{
    ViewBag.Title = "_CategoryPartialView";

}

<div class=" form-group">
    @Html.Label("Välj en kategori:", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("Category", new SelectList(Model.Select(x => new { Value = x.Id, Text = x.Name }), "Value", "Text"), htmlAttributes: new { @class = "form-control" })
    </div>
</div>
