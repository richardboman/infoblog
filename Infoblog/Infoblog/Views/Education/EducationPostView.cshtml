@model List<Infoblog.Models.PostViewModel>
@using Microsoft.AspNet.Identity;


@{
    ViewBag.Title = "EducationPostView";
}

<h2>Utvecklingsarbeten inom utbildning</h2>

@{Html.RenderAction("_NewPostPartial", "Education");}

<div class="col-lg-12">
    @foreach (var p in Model)
    {
    <div class="row">
        <h2>@p.Title</h2>
        <p>@p.Content</p>
        <span class="text-info">@p.FirstName @p.LastName - @p.Author</span> -
        <span class="text-info">@p.Date</span>
        @if (p.Author == User.Identity.Name)
        {
            @Html.ActionLink("Ändra", "EditPost", "Education", new { Id = p.Id, Content = p.Content, Title = p.Title },
                new { @class = "btn btn-warning" })
            @Html.ActionLink("Ta bort", "RemovePost", "Education", new { Id = p.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Är du säker på att du vill ta bort detta inlägg?');" })
        }
        <hr />
    </div>
    
    }
</div>



