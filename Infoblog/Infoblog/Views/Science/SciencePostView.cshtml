@model List<Infoblog.Models.PostViewModel>

<h2>Utvecklingsarbeten inom forskning</h2>

@{Html.RenderAction("NewSciencePostPartial", "Science"); }

<div class="col-lg-12">
    @foreach (var p in Model)
    {
        <div class="row">
            <h2>@p.Title</h2>
            <p>@p.Content</p>
            <span class="text-info">@p.FirstName @p.LastName - @p.Author</span> -
            <span class="text-info">@p.Date</span>
            @if (p.Author == User.Identity.Name)
            {
                @Html.ActionLink("Ändra", "EditPost", "Science", new { Id = p.Id, Content = p.Content, Title = p.Title },
                    new { @class = "btn btn-warning" })
                @Html.ActionLink("Ta bort", "RemovePost", "Science", new { Id = p.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Är du säker på att du vill ta bort detta inlägg?');" })
            }
            <hr/>
        </div>
    }
</div>


